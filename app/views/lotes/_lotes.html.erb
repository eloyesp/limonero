<%= table_for(@lotes) do |t| %>
  <%= t.data do
    t.cell(:manzana)
    t.cell(:loteo)
    t.cell(:parcela)
    t.cell(:partida)
    t.cell(:estado)
    t.cell(:titular)
    t.cell(:acciones, :heading => "Acciones", :cell_html => {:class => "acciones"}) do |lote|
      cell_content = "<ul>\n  "
      cell_content += "<li>#{link_to 'Detalles', lote}</li>\n"
      cell_content += "<li>#{link_to 'Editar', edit_lote_path(lote)}</li>\n"
      if lote.pagable?
        # cell_content += "<li>#{ link_to 'Ver pagos', payment_pays_path(lot.payment_actual) }</li>\n"
        # cell_content += "<li>#{ link_to 'Generar Pago', new_payment_pay_path(lot.payment_actual) }</li>\n"
      end
      cell_content += "</ul>"
      raw cell_content
    end
  end %>
<% end %>

